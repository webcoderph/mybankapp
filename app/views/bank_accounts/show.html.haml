%h2 
  Account Number: #{@bank_account.account_no}
  %small
    #{@bank_account.client}

= button_tag :new_transaction, id: "btn-transaction", class: "btn btn-primary" do
  New Transaction

#parameters{ data: {bank_account_id: @bank_account.id}}
= render 'form'

%table.table.table-hovered
  %thead
    %tr
      %th Date of Transaction
      %th Transaction Type
      %th Amount
  %tbody
    - @bank_account.account_transactions.each do |t|
      %tr
        %td #{t.created_at}
        #td #{t.transaction_type}
        %td #{number_to_currency(t.amount, unit: "P")}
    %tr
      %th
      %th Balance
      %th #{number_to_currency(@bank_account.balance, unit: "P")}

= javascript_include_tag "bank_accounts/Show"
:javascript
  $(document).ready(function(){
    Show.init();
  });
